#!/bin/bash

args=( "$@" )

i=0
name_ok=false
cookie_ok=false
while [ $i -lt $# ]
do
  opt="${args[${i}]}"
  if [ $opt = "-sname" ];
  then
    ((i=i+1))
    name_ok=true
    name="${args[${i}]}"
  fi
  if [ $opt = "-setcookie" ];
  then
    ((i=i+1))
    cookie_ok=true
    cookie="${args[${i}]}"
  fi
  ((i=i+1))
done

erl_cmd="case net_adm:ping(${name}) of pong -> rpc:call('${name}',init,stop,[]), timer:sleep(1000), case net_adm:ping(${name}) of pang -> io:format(\"Killed ~p~n\", ['${name}']); pong -> io:format(\"Cannot kill ~p~n\", ['${name}']) end; pang -> io:format(\"Unknown node: ~p~n\", ['${name}']) end, erlang:halt()"

if [ $name_ok = true ]
then
    if [ $cookie_ok = true ];
    then
        erl -sname ekill -setcookie "${cookie}" -noshell -eval "${erl_cmd}"

    else
        erl -sname ekill -noshell -eval "${erl_cmd}"
    fi
else
    echo
    echo "usage: ${0} -sname <name> [-setcookie <cookie>]"
    echo
fi

exit 1

